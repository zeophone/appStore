.pagination .point {
  height: 60rpx;
  text-align: center;
  background: #e1e1e1;
}
.pagination .point text {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
  margin-right: 15rpx;
  -webkit-transition: all 0.5s;
  -o-transition: all 0.5s;
  transition: all 0.5s;
}
.pagination .point .effects {
  -webkit-transform: scale(1.4);
      -ms-transform: scale(1.4);
          transform: scale(1.4);
  background: #ccc;
}
.pagination .click {
  padding: 0 20rpx 20rpx;
}
.pagination .click .warp {
  height: 90rpx;
  line-height: 90rpx;
  border: 2px solid #000;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 28rpx;
  color: #666;
}
.pagination .click .warp .prev {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
      -ms-flex: 2;
          flex: 2;
  text-align: center;
  border-right: 1px solid #000;
  background: #fff;
}
.pagination .click .warp .page_num {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
      -ms-flex: 3;
          flex: 3;
  text-align: center;
}
.pagination .click .warp .next {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
      -ms-flex: 2;
          flex: 2;
  text-align: center;
  border-left: 1px solid #000;
  background: #fff;
}
.pagination .click .warp .no {
  color: #ccc;
}

