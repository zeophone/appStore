<view class="order" bind:__l="__l"><view class="miniOrder"><block wx:if="{{userInfo}}"><view class="userInfo"><image src="{{userInfo.avatarUrl}}" mode></image><view class="user_status"><text>{{userInfo.nickName}}</text><block wx:if="{{orderList}}"><text>{{"起名订单记录共"+orderList.length+"条"}}</text></block></view><view class="refresh"><image style="{{'transform:'+('rotate('+refresh+'deg)')+';'}}" src="../../static/refresh.png" mode data-event-opts="{{[['tap',[['refreshHandler',['$event']]]]]}}" bindtap="__e"></image></view></view></block><block wx:else><button type="primary" open-type="getUserInfo" data-event-opts="{{[['getuserinfo',[['loginAuth',['$event']]]]]}}" bindgetuserinfo="__e">授权登陆</button></block></view><block wx:if="{{userInfo}}"><view class="tig">查询订单结果如下<text data-event-opts="{{[['tap',[['call',['$event']]]]]}}" class="kefu" bindtap="__e">有疑问?联系客服</text></view></block><block wx:if="{{orderList&&orderList.length>0}}"><view class="order_list"><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="order_item"><view class="head"><text class="order_sn">{{"订单号："+item.order_sn}}</text><text class="status">{{item.order_status==1?'已支付':'未支付'}}</text></view><view class="content"><view><text class="content_title">{{item.title}}</text><text class="money">{{"￥"+item.money}}</text></view><view class="child_item">{{"姓氏："+item.surname}}</view><view class="child_item">{{"类型："+item.order_type}}</view><view class="child_item">{{"数量："+item.level_num+"个名字"}}</view></view><block wx:if="{{item.order_status==1}}"><view class="foot"><text data-event-opts="{{[['tap',[['orderNext',[i]]]]]}}" bindtap="__e">查看名字</text></view></block><block wx:if="{{item.order_status!=1}}"><view></view></block></view></block></view></block><block wx:if="{{isEmpty}}"><view class="center">未查询到相关记录</view></block></view>