.order {
  position: relative;
  padding: 10rpx;
}
.order .userInfo {
  padding: 20rpx 40rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
}
.order .userInfo .refresh {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.order .userInfo .refresh image {
  -webkit-transition: all 1s;
  -o-transition: all 1s;
  transition: all 1s;
}
.order .userInfo image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.order .userInfo .user_status {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  font-size: 24rpx;
  color: #999;
}
.order .userInfo .user_status text:nth-of-type(1) {
  font-size: 36rpx;
  color: #484848;
}
.order .tig {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  background: #ffffff;
}
.order .tig .kefu {
  float: right;
  color: #1c75d1;
}
.order .tig .check_mob {
  color: #e3434f;
}
.order .order_list {
  padding: 30rpx 20rpx;
  background: #f5f5f5;
}
.order .order_list .foot {
  height: 90rpx;
  padding-right: 30rpx;
  border-top: 1px solid #ccc;
}
.order .order_list .foot text {
  background: #000040;
  width: 160rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  line-height: 60rpx;
  height: 60rpx;
  margin-top: 15rpx;
  border-radius: 8rpx;
  display: inline-block;
  float: right;
}
.order .order_list .order_item {
  border: 4rpx solid #000;
  margin-bottom: 20rpx;
  background: #fff;
}
.order .order_list .order_item .content {
  padding: 30rpx 20rpx;
}
.order .order_list .order_item .content .content_title {
  width: 550rpx;
  display: inline-block;
  font-size: 30rpx;
}
.order .order_list .order_item .content .child_item {
  color: #999;
  font-size: 28rpx;
}
.order .order_list .order_item .content .money {
  color: #e3434f;
  float: right;
}
.order .order_list .order_item .head {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx 0 70rpx;
  font-size: 30rpx;
  color: #666666;
  border-bottom: 1px solid #ccc;
  background: url('https://static.quwangming.com/p_child_name/images/icon_gua.png') no-repeat;
  background-size: 40rpx 40rpx;
  background-position: 20rpx 20rpx;
}
.order .order_list .order_item .status {
  float: right;
  color: #2c9209;
}
.order input {
  width: 580rpx;
}
.order .search {
  background: url('https://static.quwangming.com/newqiming/images/m/chuantong/icon_fdj.png') no-repeat;
  height: 50rpx;
  width: 50rpx;
  background-size: 50rpx 50rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

