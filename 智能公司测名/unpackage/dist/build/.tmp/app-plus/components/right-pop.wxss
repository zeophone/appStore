.right-pop {
  z-index: 100;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  -webkit-transition: -webkit-transform 0.3s ease;
  transition: -webkit-transform 0.3s ease;
  -o-transition: transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.right-pop .bg {
    z-index: 99;
    background: rgba(0, 0, 0, 0.6);
    width: 100%;
    height: 100%;
}
.right-pop .container {
    background: #f2f2f2;
    z-index: 100;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    right: 0;
    top: 20%;
}
.right-pop .header {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 34rpx;
    text-align: center;
    color: #00b477;
    background: #373d41;
    position: relative;
}
.right-pop .header .close {
      position: absolute;
      right: 20rpx;
      font-size: 32rpx;
}
.right-pop .content::-webkit-scrollbar {
    display: none;
}
.right-pop .content {
    background: #f5f5f5;
    padding-top: 20rpx;
    height: 100%;
    overflow-y: scroll;
    position: relative;
}
.right-pop .content .search_k {
      position: absolute;
      top: 114rpx;
      left: 30rpx;
      width: 610rpx;
      padding: 20rpx 40rpx;
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 12rpx;
      font-size: 30rpx;
      line-height: 50rpx;
}
.right-pop .content .search {
      padding: 0 20rpx;
      height: 90rpx;
      width: 650rpx;
      margin: 0 auto;
      border-radius: 8rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      background: #fff;
      -webkit-box-align: Center;
      -webkit-align-items: Center;
          -ms-flex-align: Center;
              align-items: Center;
}
.right-pop .content .search .icon {
        background: url("https://static.quwangming.com/gsqm/images/m/fdj.png") no-repeat 0 0/100%;
        width: 38rpx;
        height: 38rpx;
        margin-right: 20rpx;
}
.right-pop .content .tit {
      padding-left: 30rpx;
      padding-top: 20rpx;
