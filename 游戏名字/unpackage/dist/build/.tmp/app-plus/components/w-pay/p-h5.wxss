.p-h5 .pay_fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  padding-top: 10rpx;
  -webkit-transition: all 0.5s;
  -o-transition: all 0.5s;
  transition: all 0.5s;
}
.p-h5 .pay_fixed .pay_input {
  background: #fff;
  border-radius: 8rpx;
}
.p-h5 .pay_fixed .pay_input_warp {
  position: relative;
}
.p-h5 .pay_fixed .pay_value {
  position: absolute;
  color: #f00;
  top: 0;
  right: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.p-h5 .pay_input {
  border: 1px solid #ccc;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  padding-left: 20rpx;
}
.p-h5 .pay_methods {
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  color: #fff;
}
.p-h5 .pay_methods > text {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}
.p-h5 .pay_methods .methods_wechat {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  margin-right: 20rpx;
  background: #00b700;
}
.p-h5 .pay_methods .methods_wechat .icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  background: url(https://static.quwangming.com/gsqm/images/m/pay_icon.png) no-repeat;
  background-size: 50rpx 100rpx;
  background-position: 0 -54rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.p-h5 .pay_methods .methods_alipay {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  background: #00aaee;
}
.p-h5 .pay_methods .methods_alipay .icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  background: url(https://static.quwangming.com/gsqm/images/m/pay_icon.png) no-repeat;
  background-size: 50rpx 100rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

