.index {
  position: relative;
  background: #f5f5f5;
}
.index .date_input {
  width: 460rpx;
}
.index .container {
  background: url('https://static.quwangming.com/newqiming/images/m/chuantong/banner.jpg') no-repeat;
  padding-top: 360rpx;
  width: 100%;
  background-size: 750rpx 580rpx;
}
.index .form {
  padding: 0 20rpx;
  background: #f8f8f8;
}
.index .form .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 20rpx 20rpx;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  border-bottom: 1rpx solid #e7e7e7;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #fff;
  position: relative;
  top: -40rpx;
}
.index .form .item:nth-of-type(1) {
  border-top-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
}
.index .form .item:nth-of-type(4) {
  border-bottom: 0;
  border-bottom-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
}
.index .form .item:nth-of-type(5) {
  border-bottom: 0;
  border-radius: 12rpx;
  top: 0;
}
.index .form .title {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}
.index .form input {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  font-size: 32rpx;
}
.index .form .radio {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  width: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 30rpx;
}
.index .form .radio text {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  display: inline-block;
  width: 60rpx;
  margin-right: 20rpx;
  height: 60rpx;
  background: #c8c8c8;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  line-height: 60rpx;
}
.index .form .radio .checked {
  background: #e8524c;
}
.index .submit {
  width: 690rpx;
  background: url('https://static.quwangming.com/common/images/qiming_anniu.png') no-repeat;
  background-size: cover;
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin: 60rpx auto 20rpx;
}

